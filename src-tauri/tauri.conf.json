{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Divergence",
  "identifier": "com.divergence.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Divergence",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "sql": {
      "preload": [
        "sqlite:divergence.db"
      ]
    },
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ0NzdBRDE4NkQ0QzNDNjAKUldSZ1BFeHRHSzEzUkJZYkFQSWtmZmxxY3RWUDBaVEd0cm9pZkV3UzRoUDRwZHB3ZmhrZ0QyZC8K%",
      "endpoints": [
        "https://github.com/marckraw/divergence/releases/latest/download/latest.json"
      ]
    }
  }
}